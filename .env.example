# Monate backend configuration
MONATE_PORT=8080
MONATE_DB_DSN=/data/monate.db
MONATE_PUBLIC_BASE_URL=http://localhost:8080
MONATE_MANUAL_CHECK_INTERVAL=1m
MONATE_UI_DEV_SERVER_URL=

# External Monero daemon RPC endpoint (hosted elsewhere)
MONEROD_RPC_ENDPOINT=http://monerod.example.com:18081

# Monero wallet RPC credentials/config
MONERO_WALLET_RPC_USERNAME=wallet
MONERO_WALLET_RPC_PASSWORD=wallet-password
MONERO_WALLET_RPC_WALLET_FILE=merchant-wallet
MONERO_WALLET_RPC_WALLET_PASSWORD=change-this
MONERO_WALLET_RPC_BIND_PORT=18082

# MoneroPay configuration
MONEROPAY_API_TOKEN=change-me
MONEROPAY_CALLBACK_BASE=http://monate:8080/webhooks/moneropay

# Optional: expose Monate on a different host:port combination
MONATE_HOST=0.0.0.0
